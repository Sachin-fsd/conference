                  <span class="dropdown edit">
                    <i onclick="myFunction('{{this._id}}')" class="dropbtn uil uil-ellipsis-h"></i>
                    <div id="myDropdown-{{this._id}}" class="dropdown-content">
                      {{#if (eq this.UserDetails.UserID ../UserDetails.UserID)}}<a href="" onclick="deletePost('{{this._id}}')">Delete</a> {{else}}{{/if}}
                      <a href="/comment/{{this._id}}">Comment</a>
                      <a href="/{{this.UserDetails.UserID}}">Profile</a>
                    </div>
                  </span>



                </div>
                <a href="/comment/{{this._id}}">
                  <div class="photo">
                    {{#if this.photo}}
                      <img
                        src="{{this.photo}}"
                        onerror="this.style.display='none'"
                        
                      />
                    {{/if}}
                    {{#if this.video}}
                    <video width="" height="" controls src="{{this.video}}" onerror="this.style.display='none'" class="preview-video">
                      
                    </video>
                    {{/if}}
                    {{#if this.pdf}}
                      <div
                        id="pdf-loader"
                        style="width:475px; height:400px; display: flex; align-items: center; justify-content: center;"
                      >
                        <p>Loading PDF...</p>
                      </div>
                      <iframe
                        id="pdf-preview"
                        src="http://docs.google.com/gview?url={{this.pdf}}&embedded=true"
                        style="width:475px; height:400px; display: none;"
                        frameborder="0"
                        onload="document.getElementById('pdf-loader').style.display='none'; this.style.display='block';"
                      ></iframe>
                      <a href="{{this.pdf}}" download>Download PDF</a>

                    {{/if}}

                    <p class="post-text">{{formatText this.text}}</p>
                  </div>
