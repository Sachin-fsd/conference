                <img id="image-1" src="pic1" alt="A woman standing in front of many tall cacti.">
                <img id="image-2" src="pic2" alt="A potted orange Desert Cabbage against a blue wall.">
                <img id="image-3" src="pic3" alt="Text conversation contianing images of cats and cat puns.">
                <img id="image-4" src="pic4" alt="Top view of a green Tree Aeonium plant.">
                <img id="image-5" src="pic5" alt="Instagram profile display for Jane Appleseed.">
            </div>
        </section>

        <section id="details-ctr">
            <div id="login-ctr">
                <div id="errorBox" style="display: none; color: red;z-index: 2;font-size: small;margin: -30px;"></div>
                <div class="card">
                    <h2>Conference</h2>

                    <!-- SE CONNECTER / S'INSCRIRE -->
                    <div class="login_register ">
                        <a href="/login" class="login " target="blank">Login</a>
                        <a href="/register" class="register active" target="blank">Signup</a>
                    </div>
                    <div id="myPopup" class="popup">
                        <div class="popup-content">
                            <label for="" class="text-bold">Details sent for Verification</label>
                            <p>You will be notified in few days</p>
                            <button id="yesButton" class="formal-button">
                                OK
                            </button>
                        </div>
                    </div>

                    <!-- FORMULAIRE -->
                    <form class="form" id="register_form">
                        <input type="text" placeholder="Name" id="name">
                        <input type="text" placeholder="School" id="school">
                        <input type="text" placeholder="Course" id="course">
                        <input type="text" placeholder="Section" id="section">
                        <input type="text" placeholder="RollNo" id="rollno">
                        <input type="email" placeholder="Email" id="email">
                        <input type="password" placeholder="Password" id="password">
                        <input type="file" id="idcard" style="display: none;"
                            onchange="document.getElementById('fileLabel').innerText = this.files[0].name">
                        <label for="idcard" id="fileLabel" style="cursor: pointer;"><p style="color: grey;">Upload your ID Card</p></label>
                        <button type="submit" class="login_btn" id="submit-btn">Send for Verification</button>
                    </form>

                    <!-- BOUTTON LOGIN -->
                    <div class="footer_card">
                        <p>Already registered</p>
                        <a href="/login">Log In now</a>
                    </div>
                </div>
            </div>
        </section>
    </main>

