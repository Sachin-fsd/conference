<script>

window.onload = function () {
  document.getElementById("PreLoaderBar").classList.remove("show");
  document.getElementById("PreLoaderBar").classList.add("hide");
  var textarea = document.getElementById('UserBio');
    textarea.style.height = ""; /* Reset the height*/
    textarea.style.height = Math.min(textarea.scrollHeight) + "px";
  };
  window.onbeforeunload = function() {
  document.getElementById("PreLoaderBar").classList.remove("hide");
  document.getElementById("PreLoaderBar").classList.add("show");
}

  async function editProfile(){ 
    let email = document.getElementById("password").dataset.email
    let password = document.getElementById("password").value;
    let ID = document.getElementById("password").dataset.id;
    let UserName = document.getElementById("UserName").value 
    let UserBio = document.getElementById("UserBio").value


    if(!UserName || !UserBio || !password){ 
      alert("Enter correct Details") 
      return;
    } 
    
    if(UserName && UserBio && password){ 
      let dp = document.getElementById("dp").src 
      let obj = {UserName,UserBio,dp,email,password} 
      let fetched = await fetch(`/profile/${ID}`, { 
        headers: { "Content-Type": "application/json",
        Authorization: `Bearer ${localStorage.getItem("token") ||sessionStorage.getItem("token") ||""}`, }, 
        method: "PUT", 
        body: JSON.stringify(obj), }); 
      if(fetched.ok){ 
        window.location.href = `/${ID}` 
      }else{
        alert("Update Failed")
      }
    } 
  }


  document.getElementById("profile-submit-btn").addEventListener(
    "click",
    function () {
        myPopup.classList.add("show");
    }
  );
  closePopup.addEventListener(
    "click",
    function () {
        editProfile()
        myPopup.classList.remove(
            "show"
        );
    }
  );
  window.addEventListener(
      "click",
      function (event) {
          if (event.target == myPopup) {
              myPopup.classList.remove(
                  "show"
              );
          }
      }
  );
  
</script>